extends layout

block content
    nav.navbar.navbar-light.bg-faded.px-5.mb-3
        h1.title.navbar-brand.mb-0 Smarty files:
    .container.mb-3
        .row
            .col-sm-3
                input#fileInput.file_input(type='file', name='file')
                label(for='fileInput') Choose a file
            .col-sm-7
                .file_info
                    #filename.file_name
                    #filesize.file_size
            .col-sm-2
                #upload.btn.btn-success
                    | Upload
    .container.files.mb-5
        each file in files
            .row.py-2
                .col-sm-11
                    a(href='http://localhost:3000/storage/#{file}' download)
                        | #{file}
                .col-sm-1
                    .delete_button(id='#{file}')
                        .fa.fa-trash.fa-lg
    #fileModal.modal.fade(
        tabindex="-1"
        role="dialog"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
    )
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5.modal-title
                    button.close(
                        type='button'
                        data-dismiss='modal'
                        aria-label='Close'
                    )
                        span(aria-hidden='true') &times;
                .modal-body
                    | some modal body
                .modal-footer
                    button.btn.btn-secondary(type='button' data-dismiss='modal')
                        | Close
                    button.btn.btn-primary(type='button')
                        | Save changes
